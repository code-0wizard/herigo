<% provide(:title, 'Log in') %>
<div class="user_form">
  <div class="container">
    <div class="card">
      <%= form_with(url: login_path, scope: :session) do |f| %>
        <div class="form-group f-size">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group f-size">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, placeholder: "8~20桁の半角英数字(各1文字以上)", class: 'form-control' %>
          
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %>
            <span>ログイン状態を維持する</span>
          <% end %>
        </div>

        <div class="text-center f-size">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>

        <div class="text-center margin_bottom">
          <%= link_to "パスワードをお忘れの方", new_password_reset_path %>
        </div>
    </div>
  </div>
</div>
