<% provide(:title, "パスワード再設定") %>
<div class="reset-wrapper">
  <div class="reset-form">
    <p class="reset-form__title">パスワード再設定</p>
    <%= form_with(model: @user, url: password_reset_path(params[:id])) do |f| %>
      <%= hidden_field_tag :email, @user.email %>

      <%= f.password_field :password, placeholder: "パスワード:8~20桁の半角英数字(各1文字以上)", class: 'reset-form__password' %>
      <%= error_message_for(@user, :password) %>

      <%= f.password_field :password_confirmation, placeholder: "パスワード確認欄", class: 'reset-form__password-confirmation' %>
      <%= error_message_for(@user, :password_confirmation) %>

      <%= f.submit "変更する", class: "reset-form__submit" %>
    <% end %>
    <%= render 'shared/flash_message' %>
  </div>
</div>
