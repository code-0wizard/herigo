<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <%= image_tag @user.profile_image, size: '100x100', class: 'rounded-image' if @user.profile_image.attached? %>


      <section class="stats">
        <%= render 'shared/stats' %>
      </section>

       <%= render 'follow_form' if logged_in? %>

      <p>口コミ</p>
      <% @reviews.each do |review| %>
        <p><%= review.content %></p>
        <% if review.review_images.attached? %>
          <% review.review_images.each do |image| %>
            <%= image_tag image, size:'300x200' %>
          <% end %>
        <% end %>   
        <% if current_user?(review.user) %>
          <%= link_to "delete", review, data: { "turbo-method": :delete, turbo_confirm: "削除しますか？" } %>
        <% end %>   
      <% end %>

      <p>イイねした口コミ</p>
      <% @like_reviews.each do |review| %>
        <p><%= review.content %></p>
        <% if review.review_images.attached? %>
          <% review.review_images.each do |image| %>
            <%= image_tag image, size:'300x200' %>
          <% end %>
        <% end %>   
      <% end %>
    </section>
  </aside>
</div>
